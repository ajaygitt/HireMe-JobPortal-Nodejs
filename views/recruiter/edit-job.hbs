<div class="container">
	
	<!-- Submit Page -->
	<div class="sixteen columns">
		<div class="submit-page">

			<!-- Notice -->
			<div class="notification notice closeable margin-bottom-40">
				<p><span>Have an account?</span> If you donâ€™t have an account you can create one below by entering your email address. A password will be automatically emailed to you.</p>
			</div>

<form  id="addjob" method="POST" name="addjob" action="/editJob?job={{job._id}}" enctype="multipart/form-data">
			<!-- Email -->
			<div class="form">
				<h5>email</h5>
				<input class="search-field" type="text" name="email" value="{{job.email}}" id="email" placeholder="mail@example.com" />
			</div>

			<!-- Title -->
			<div class="form">
				<h5>Job Title</h5>
				<input class="search-field" type="text" id="jobTitle" name="jobTitle" placeholder="" value="{{job.jobTitle}}"/>
			</div>

			<!-- Location -->
			<div class="form">
				<h5>Location <span></span></h5>
				<input class="search-field" type="text" name="location" id="location" placeholder="e.g. London" value="{{job.location}}"/>
				<p class="note">Leave this blank if the location is not important</p>
			</div>

			<!-- Job Type -->
			<div class="form">
				<h5>Job Type</h5>
				<select data-placeholder="Full-Time" name="jobType" value="{{job.jobType}}" id="jobType" class="chosen-select-no-single">
					<option value="full-time">Full-Time</option>
					<option value="part-time">Part-Time</option>
					<option value="internship">Internship</option>
					<option value="freelance">Freelance</option>
				</select>
			</div>

				<!-- Job Type -->
			<div class="form">
				<h5>Minimum Experience</h5>
				<select data-placeholder="Full-Time" name="experience" id="experience" class="chosen-select-no-single">
				  <option value="0">fresher</option>
					<option value="1">0-1</option>
					<option value="2">1-2</option>
					<option value="3">3-4</option>
					<option value="4">>4</option>
				</select>
			</div>


			<!-- Choose Category -->
			<div class="form">
				<div class="select">
					<h5>Category</h5>
					<select data-placeholder="Choose Categories" id="category" name="category" class="chosen-select" multiple>
						<option value="webdev">Web Developers</option>
						<option value="mobiledev">Mobile Developers</option>
						<option value="design">Designers & Creatives</option>
						<option value="writers">Writers</option>
						<option value="virtual">Virtual Assistants</option>
						<option value="customer">Customer Service Agents</option>
						<option value="sales">Sales & Marketing Experts</option>
						<option value="accountant">Accountants & Consultants</option>
					</select>
				</div>
			</div>


			<div class="form">
				<div class="select">
					<h5>Minimum Qualification</h5>
					<select data-placeholder="Choose quaification" id="category" name="qualification" value="{{job.quallification}}" class="chosen-select" multiple>
						<option value="PG">PG(Any)</option>
						<option value="Ug">UG</option>
						<option value="+2">+2</option>
						<option value="SSLC">SSLC</option>
						
					</select>
				</div>
			</div>

			<!-- Tags -->
			<div class="form">
				<h5>Job Tags <span>(optional)</span></h5>
				<input class="search-field" type="text" name="tags" id="tags" placeholder="e.g. PHP, Social Media, Management" value="{{job.tags}}"/>
				<p class="note">Comma separate tags, such as required skills or technologies, for this job.</p>
			</div>


			<!-- Description -->
			<div class="form">
				<h5>Description</h5>
				<textarea class="WYSIWYG" name="description" cols="40" id="description" rows="3" name="description" spellcheck="true">{{job.description}}</textarea>
			</div>

			<!-- Application email/url -->
			<div class="form">
				<h5>Sallary offered (in INR)</h5>
				<input type="text" placeholder="sallary offered" value="{{job.sallary}}" name="sallary" id="sallary">
			</div>

			<!-- TClosing Date -->
			<div class="form">
				<h5>Closing Date(maximum date valid is 15 ) <span></span></h5>
				{{!-- <input data-role="date" type="date" name="closingDate" min="2021-03-31" max="2021-04-20" id="closingDate" placeholder="yyyy-mm-dd"> --}}
				<input type="text" id="datepicker" name="closingDate" value="{{job.closingDate}}">
				<p class="note">Deadline for new applicants.</p>
			</div>
	

			
			<!-- Company Details -->
			<div class="divider"><h3>Company Details</h3></div>

			<!-- Company Name -->
			<div class="form">
				<h5>Company Name</h5>
				<input type="text" name="company_name" id="company_name" value="{{job.company_name}}" placeholder="Enter the name of the company">
			</div>

			<!-- Website -->
			<div class="form">
				<h5>Website <span></span></h5>
				<input type="text" name="website" id="website" value="{{job.website}}" placeholder="http://">
			</div>

			<!-- Teagline -->
			<div class="form">
				<h5>Tagline <span></span></h5>
				<input type="text" name="tagline" id="tagline" value="{{job.tagline}}" placeholder="Briefly describe your company">
			</div>

		
