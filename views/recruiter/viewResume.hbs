
 <div class="split left">
<h1>Applicant Resume</h1>
    <embed src="/resumes/users-cv/{{applicant._id}}.pdf" type="Application/pdf" width="100%" height="550px">
   
  </div>
</div>

<div class="split right">
  <div class="centered">
<img  src="images/profilepic/{{applicant._id}}.jpg" alt="">

<input type="text" value="{{applicant._id}}"  id="applicantid" hidden>
<input type="text" value="{{jobId}}" id="jobId" hidden>

    <h2>{{applicant.full_name}}</h2>
    <p>{{applicant.experience}}year experienced {{applicant.type}} with qualification as {{applicant.education}}</p>
    <button onclick="approveUser()" id="approvebtn"> approve</button>
<button onclick="rejectUser()">reject</button>
  </div>
</div> 


<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<script>

  function approveUser(){

console.log("clicked")
let user=$("#applicantid").val()
let job=$("#jobId").val()
console.log("alk",user,job)
$.ajax({

  url:'/approveJob',
  method:'post',
  data:{
user,
job
  },
  success:(response)=>{

    console.log(response)
if(response){
  $("#approvebtn").hide()
  alert("approved")
  

}
else
{
  alert("not approved error")
}

  }

})

  }

  
</script>

<script>
  
function rejectUser(){

console.log("clicked")
let user=$("#applicantid").val()
let job=$("#jobId").val()
console.log("alk",user,job)
$.ajax({

  url:'/reject',
  method:'post',
  data:{
user,
job
  },
  success:(response)=>{

    console.log(response)
if(response){
  $("#approvebtn").hide()
  alert("rejected")
  

}
else
{
  alert("not rejected something went wrong")
}

  }

})
}

</script>







