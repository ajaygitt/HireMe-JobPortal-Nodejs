        <!-- end chat-leftsidebar -->

        <!-- Start User chat -->
        <div class="chat-container">
            <header class="chat-header">
                <input type="text" name="myidis" id="myidis" value="{{userfound._id}}" hidden>
                <h1><i class="fas fa-smile"></i> CHAT ON</h1>
                <h5>{{userfound.name}}</h5>
                <input type="text " value="{{userfound._id}}" id="myidis">
                <a id="leave-btn" class="btn">Logout</a>
            </header>
            <main class="chat-main">
                <div class="chat-sidebar">
                    <h4><i class="fas fa-comments"></i> recepient:</h4>

                    <h2 id="room-name">{{recieving_person.name}}</h2>
                    {{!-- <h3><i class="fas fa-users"></i> </h3> --}}
                    <ul id="users">

                    </ul>
                </div>

                <div class="chat-messages">

                    {{#each chat}}


                    <div class="ctext-wrap-content" style="padding-left:7px">
                        <p class="conversation-name pt-1 pb-1" style="margin-bottom:0px;margin-left:0px">

                            {{this.sendername}}

                        </p>
                        <p class="mb-0" style="padding-left:20px">

                            {{#if this.image}}

                            <img src="/image-chats/{{this.image}}" style="width:150px;height:150px"
                                class="img-responsive m-auto" alt="">
                        <p class="chat-time mb-0"><i class="ri-chat-check-linee align-middle"></i>
                            <span class="align-middle">{{this.Date}}</span>
                        </p>
                        {{/if}}

{{#if this.video}}

<video width="320" height="240" controls>
  <source src="/image-chats/{{this.video}}" type="video/mp4">
    {{!-- <p class="chat-time mb-0"><i class="ri-chat-check-linee align-middle"></i>
                            <span class="align-middle">{{this.Date}}</span>
                        </p> --}}
</video>


{{/if}}


                        {{this.message}}
                        </p>

                        <p class="chat-time mb-0"><i class="ri-chat-check-linee align-middle"></i>
                            <span class="align-middle">{{this.Date}}</span>
                        </p>

                    </div>`


                    <br>{{/each}}
                </div>


            </main>
            <!-- end chat conversation end -->

            <!-- start chat input section -->
            <div class="chat-input-section p-3 p-lg-4 border-top mb-0">
                <form id="chat-input" action="/chat-input" method="POST" enctype="multipart/form-data">
                    <div class="row g-0">

                        <div class="col">

                            <input type="text" name="Chat" id="msg"
                                class="form-control form-control-lg bg-light border-light"
                                placeholder="Enter Message...">

                        </div>
                        <div class="col-auto">
                            <div class="chat-input-links ms-md-2 me-md-0">
                                <ul class="list-inline mb-0">
                                    {{!-- <li class="list-inline-item" data-bs-toggle="tooltip" data-bs-placement="top"
                                        title="Emoji">
                                        <button type="button"
                                            class="btn btn-link text-decoration-none font-size-16 btn-lg waves-effect">
                                            <i class="ri-emotion-happy-line"></i>
                                        </button>
                                    </li> --}}
                                    <li class="list-inline-item" data-bs-toggle="tooltip" data-bs-placement="top"
                                        title="Attached File">

                                        <div>
                                            <label for="upload_input" class="btn"><i
                                                    class="ri-attachment-line"></i></label>
                                            <input id="upload_input" style="visibility:hidden;" type="file"> 
                                                 
                                        </div>



                                        {{!-- audiiio recording --}}
